<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>URL Shortener</h1>
    <%= form_for @link do |f| %>
      <%= f.label :url, "Url" %>
      <%= f.text_field :url, placeholder: "http://www.yoururlhere.com", class: "form-control" %>
      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>